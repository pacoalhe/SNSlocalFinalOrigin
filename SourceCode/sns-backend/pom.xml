	<profiles>
    	<profile>
	        <id>dev</id>
    	    <activation>
            	<activeByDefault>true</activeByDefault>
        	</activation>
        	<properties>
	            <config.dir>${basedir}/config/dev</config.dir>
        	</properties>
    	</profile>

    	<profile>
	        <id>qa</id>
        	<properties>
	            <config.dir>${basedir}/config/qa</config.dir>
        	</properties>
    	</profile>
    	
    	<profile>
